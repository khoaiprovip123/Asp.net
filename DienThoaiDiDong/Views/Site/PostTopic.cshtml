
@model IEnumerable<MyClass.Models.PostInfo>
@{
    var topic = ViewBag.Topic;
}
@{
    ViewBag.Title = topic.Name;
    Layout = "~/Views/Share/_LayoutSite.cshtml";
}

<section class="main-container clearfix">
    <div class="container my-3">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="category-title position-relative">
                    <h2 class="text-center text-success">@topic.Name</h2>
                </div>
                @foreach (var post in Model)
                {
                    <div class="row my-3">
                        <div class="col-md-4">
                            <a href="~/@post.Slug"></a> <img src="~/Public/images/Post/@post.Img" class="img-fluid" />
                        </div>
                        <div class="col-md-8">
                            <h3><a href="~/@post.Slug"> @post.Title</a></h3>
                            <p>@Html.Raw(XString.Str_Limit(post.Detail, 1000))</p>
                            <div class="text-right"><a href="~/@post.Slug"> Xem Thêm</a></div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

