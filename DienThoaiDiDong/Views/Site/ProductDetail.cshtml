

@model MyClass.Models.Product
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Share/_LayoutSite.cshtml";
}
@{
    int flag = (Model.Price == Model.Pricesale) ? 1 : 0;
    decimal PercentDiscount = (100 - (Model.Pricesale / Model.Price) * 100);
}

<section class="main-container clearfix">
    <div class="container my-3">
        <div class="row product-info py-3">
            <div class="col-md-5">
                <img style="width:80%;" src="~/Public/images/Product/@Model.Img"
                     class="img-fluid card-img-top" alt="@Model.Name" />
            </div>
            <div class="col-md-6">
                <h2 class="position-relative text-success box-content">
                    @Model.Name
                    @if (flag == 1)
                    {
                        <span class="position-absolute  top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            Mới
                        </span>
                    }
                    else
                    {
                        <span class="position-absolute  start-100 translate-middle badge rounded-pill bg-danger">
                            <span> -@string.Format("{0:#,0.0}", PercentDiscount)% </span>
                        </span>
                    }
                </h2>
                <span>Nhà cung Cấp: <span class="text-primary">@Model.SupplierId</span></span>
                <div class="box-product-option">
                    <div class="box-title text-black">
                        <p class="box-title__title">Chọn màu yêu thích</p>
                    </div>
                    <div class="box-content">
                        <select name="super_attribute[80]" id="attribute80" class="required-entry super-attribute-select no-display swatch-select">

                            <option value="">Chọn màu máy</option>
                            <option class="text-black" value="" price="" data-label="bạc">Bạc &nbsp;</option>
                            <option class="text-black" value="" price="" data-label="tím">Tím &nbsp;</option>
                            <option class="text-black" value="" price="" data-label="đen">Đen &nbsp;</option>
                            <option class="text-black" value="" price="" data-label="đen">Vàng &nbsp;</option>
                        </select>

                    </div>

                    <h4 class="py-2">
                        Giá Khuyến mãi: <strong class="text-danger"> @string.Format("{0:0,0}", Model.Pricesale)<sup>đ</sup></strong>
                    </h4>
                    <h5>
                        <br />Giá gốc: <del><span class="text-center"> @string.Format("{0:0,0}", Model.Price)</span></del><sup>đ</sup>
                    </h5>

                    <div class="actions" colspan="6">
                        <div class="coupon">
                            <label for="coupon_code">Phiếu mua hàng:</label>
                            <input type="text" placeholder="Nhập mã giảm" value="" id="coupon_code" class="input-text" name="sale">
                            <button type="button" class="btn btn-primary ">Áp dụng mã</button>
                        </div>
                    </div>
                    <div class="col-md-6 my-3">

                        <a class="btn btn-danger" href="@Url.Action("CartAdd","Giohang", new { productid= Model.Id})">
                            Thêm vào giỏ
                        </a>
                        <a class="btn btn-success" href="@Url.Action("CartAdd","Giohang", new { productid= Model.Id})">Mua Ngay</a>

                    </div>



                    <div class="row product-details">
                        <h3 class="text-bold"> Thông số kỹ thuật </h3>
                        <p>@Html.Raw(Model.Detail)</p>
                    </div>
                    <div class="row product-info">

                    </div>
                </div>
            </div>
