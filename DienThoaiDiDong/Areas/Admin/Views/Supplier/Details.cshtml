                        <th>@Html.DisplayFor(model => model.Adress)</th>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Phone)</th>
                        <th>@Html.DisplayFor(model => model.Phone)</th>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Orders)</th>
                        <th>@Html.DisplayFor(model => model.Orders)</th>
                    </tr>

                    <tr>
