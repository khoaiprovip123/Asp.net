@model IEnumerable<MyClass.Models.Supplier>

@{
    ViewBag.Title = "Tất Cả Nhà Cung Cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">

    <section class="content my-2">

        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">
                          Tất cả Nhà Cung Cấp
                        </strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <a class="btn btn-sm btn-success" href="@Url.Action("Create","Supplier")"><i class="fas fa-plus"></i> Thêm</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Trash","Supplier")"><i class="fas fa-trash"></i> Thùng rác</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:10px;">#</th>
                            <th class="text-center" style="width:80px;">Hình</th>
                            <th class="text-center" style="width:80px;">Nhà cung cấp</th>
                            <th class="text-center">Liên kết</th>
                            <th class="text-center" style="width:40px;">Email</th>
                            <th class="text-center" style="width:100px;">Địa chỉ</th>
                            <th class="text-center" style="width:80px;">Liên hệ</th>
                            <th class="text-center" style="width:100px;">Được tạo lúc</th>
                            <th class="text-center" style="width:150px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="text-center"> <input type="checkbox" name="checkId" value=" " /> </td>
                            <td class="text-center">
                                <img class="img-fix-form" style="width:35%; height:35%;" src="~/Public/images/Supplier/@Html.DisplayFor(modelItem => item.Img)" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Link)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Adress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>   
                            <td class="text-center">
                                @if (item.Status == 1)
                                {
                                    <a href="@Url.Action("Status", "Supplier", new { id=item.Id })" class="btn btn-sm btn-success ">
                                        <i class="fas fa-toggle-on"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Status", "Supplier", new { id=item.Id })" class="btn btn-sm btn-danger ">
                                        <i class="fas fa-toggle-off"></i>
                                    </a>
                                }
                                <a href="@Url.Action("Edit", "Supplier", new { id=item.Id })" class="btn btn-sm btn-info ">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Details", "Supplier", new { id=item.Id })" class="btn btn-sm btn-warning">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Deltrash", "Supplier", new { id=item.Id })" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                            <td class="text-center">@item.Id</td>
                        </tr>
                        }
                    </tbody>
                </table>



            </div>

        </div>
    </section>
</div>
