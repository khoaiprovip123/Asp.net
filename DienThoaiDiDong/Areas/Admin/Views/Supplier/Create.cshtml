@model MyClass.Models.Supplier

@{
    ViewBag.Title = "Thêm Nhà Cung Cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Create", "Supplier", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="content-wrapper">

        <section class="content my-2">

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">
                                Thêm Nhà Cung Cấp
                            </strong>

                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-sm btn-danger" type="submit" name="Create"><i class="fas fa-save"></i> Lưu[Thêm]</button>
                            <a class="btn btn-sm btn-success" href="@Url.Action("", "Supplier")"><i class="fas fa-undo-alt"></i> Quay lại</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label>Nhà cung cấp<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Hình ảnh</label>
                                <input type="file" name="FileImg" value="" class="form-control" accept=".png, .jpg, .gif" />
                                @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Email<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Link-nhà cung cấp<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.UrlSite, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UrlSite, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Mô tả Desc<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Metadesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Metadesc, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label>Mô tả Key<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Metakey, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Metakey, "", new { @class = "text-danger" })

                            </div>


                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Sắp xếp</label>
                                @Html.DropDownListFor(model => model.Orders, (SelectList)ViewBag.ListOrders, "Chọn", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>
                                @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Không xuất bản", Value = "2" }, new SelectListItem { Text = "Xuất bản", Value = "1" } }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                            </div>

                        </div>
                    </div>


                </div>

            </div>
        </section>
    </div>

}

