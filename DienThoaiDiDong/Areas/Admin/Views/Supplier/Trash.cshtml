@model IEnumerable<MyClass.Models.Supplier>
@{
    ViewBag.Title = "Thùng rác nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Thùng rác nhà cung cấp</strong>

                    </div>
                    <div class="col-md-6 text-right">

                        <a class="btn btn-sm btn-success" href="@Url.Action("Index", "Supplier")"><i class="fas fa-undo-alt"></i> Quay lại</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th>
                                Nhà cung cấp
                            </th>
                            
                            <th class="text-center" style="width:150px;">Hình</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th class="text-center" style="width:120px;">
                                Liên hệ
                            </th>
                            
                            <th class="text-center" style="width:200px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <input type="checkbox" name="checkId" value=" " /> </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                               

                                <td>
                                    <img class="img-fix-form" style="width:35%; height:35%;" src="~/Public/images/Supplier/@Html.DisplayFor(modelItem => item.Img)" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                
                                <td class="text-center" style="width:150px;">
                                    <a href="@Url.Action("Retrash", "Supplier", new { id=item.Id })" class="btn btn-sm btn-success">
                                        <i class="fas fa-undo-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Supplier", new { id=item.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
