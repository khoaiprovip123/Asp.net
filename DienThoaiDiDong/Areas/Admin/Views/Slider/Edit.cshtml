@model MyClass.Models.Slider

@{
    ViewBag.Title = "Chỉnh sửa Slider";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "Slider", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Img)
    @Html.HiddenFor(model => model.CreatedAt)
    @Html.HiddenFor(model => model.CreatedBy)
    <div class="content-wrapper">

        <section class="content my-2">

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">
                                Chỉnh sửa Slider
                            </strong>

                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-sm btn-danger" type="submit" name="Edit"><i class="fas fa-save"></i> Lưu[Cập nhật]</button>
                            <a class="btn btn-sm btn-success" href="@Url.Action("", "Slider")"><i class="fas fa-undo-alt"></i> Quay lại</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label>Tên Slider<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "control-label col-md" })
                                <input type="file" name="FileImg" value="" class="form-control" accept=".png, .jpg, .gif" />
                                @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Chức vụ <span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Sắp Xếp</label>
                                @Html.DropDownListFor(model => model.Orders, (SelectList)ViewBag.ListOrders, "Chọn", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Trạng thái</label>
                                @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Không xuất bản", Value = "2" }, new SelectListItem { Text = "Xuất bản", Value = "1" } }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>

}

