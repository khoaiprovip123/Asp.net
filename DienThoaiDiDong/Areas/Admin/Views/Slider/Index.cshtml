@model IEnumerable<MyClass.Models.Slider>

@{
    ViewBag.Title = "Tất cả Slider";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
<link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">

    <section class="content my-2">

        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">
                            Tất cả Slider
                        </strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <a class="btn btn-sm btn-success" href="@Url.Action("Create","Slider")"><i class="fas fa-plus"></i> Thêm</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Trash","Slider")"><i class="fas fa-trash"></i> Thùng rác</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th style="width:20px"; class="text-center">#</th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.Link)
                            </th>

                            <th style="width:200px;" class="text-center">Hình</th>
                            <th class="text-center">
                               Chức vụ
                            </th>
                            <th class="text-center">
                                Sắp xếp
                            </th>

                            <th class="text-center">
                                Được tạo lúc
                            </th>

                            <th class="text-center" style="width:150px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="text-center">
                                <input type="checkbox" name="checkId" value=" " />
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Link)
                            </td>

                            <td class="text-center">
                                <img class="img-fix-form" style="width:35%; height:35%;" src="~/Public/images/Slider/@Html.DisplayFor(modelItem => item.Img)" alt="Alternate Text" />
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Position)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Orders)
                            </td>

                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td class="text-center">
                                @if (item.Status == 1)
                                {
                                    <a href="@Url.Action("Status", "Slider", new { id=item.Id })" class="btn btn-sm btn-success ">
                                        <i class="fas fa-toggle-on"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Status", "Slider", new { id=item.Id })" class="btn btn-sm btn-danger ">
                                        <i class="fas fa-toggle-off"></i>
                                    </a>
                                }
                                <a href="@Url.Action("Edit", "Slider", new { id=item.Id })" class="btn btn-sm btn-info ">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Details", "Slider", new { id=item.Id })" class="btn btn-sm btn-warning">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Deltrash", "Slider", new { id=item.Id })" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>


            </div>

        </div>
    </section>
</div>



