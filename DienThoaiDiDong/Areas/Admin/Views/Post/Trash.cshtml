
@model IEnumerable<MyClass.Models.PostInfo>
@{
    ViewBag.Title = "Thùng rác bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

section header{
<link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Thùng rác nhà cung cấp</strong>

                    </div>
                    <div class="col-md-6 text-right">

                        <a class="btn btn-sm btn-success" href="@Url.Action("Index", "Post")"><i class="fas fa-undo-alt"></i> Quay lại</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Topid)
                            </th>
                            <th>
                                Tiêu Đề
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Slug)
                            </th>
                            <th>
                                Chi Tiết
                            </th>
                            <th>
                                Hình Ảnh
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Metakey)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MetaDesc)
                            </th>

                            <th>
                                Ngày Tạo
                            </th>


                            <th class="text-center" style="width:200px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <input type="checkbox" name="checkId" value=" " /> </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Topid)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Detail)
                                </td>
                                <td>
                                    <img class="img-fix-form" style="width:35%; height:35%;" src="~/Public/images/Post/@Html.DisplayFor(modelItem => item.Img)" />

                                <td>
                                    @Html.DisplayFor(modelItem => item.Metakey)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MetaDesc)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>

                                <td class="text-center" style="width:150px;">
                                    <a href="@Url.Action("Retrash", "Post", new { id=item.Id })" class="btn btn-sm btn-success">
                                        <i class="fas fa-undo-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Post", new { id=item.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->