@model IEnumerable<MyClass.Models.ProductInfo>

@{
    ViewBag.Title = "Thùng Rác Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Thùng Rác Sản Phẩm</strong>

                    </div>
                    <div class="col-md-6 text-right">

                        <a class="btn btn-sm btn-success" href="@Url.Action("", "Product")"><i class="fas fa-undo-alt"></i> Quay lại</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th class="text-center" style="width:100px;">Hình ảnh</th>
                            <th class="text-center">Tên sản phẩm</th>
                            <th class="text-center">Loại sản phẩm</th>
                            <th class="text-center">Nhà cung cấp</th>
                            <th class="text-center" style="width:40px;">Giá </th>
                            <th class="text-center">Giá Sale </th>
                            <th class="text-center" style="width:20px;">Số lượng </th>
                            <th class="text-center">Ngày tạo </th>
                            <th class="text-center" style="width:140px;">Chức năng</th>
                            <th class="text-center" style="width:20px;"> ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"> <input type="checkbox" name="checkId" value=" " /> </td>
                                <td class="text-center">
                                    <img src="~/Public/images/Product/@item.Img" alt="TenHinh" class="img-fluid" />
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="text-center">@item.CatId</td>
                                <td class="text-center">@item.SupplierId</td>
                                <td class="text-center">@item.Price</td>
                                <td class="text-center">@item.Pricesale</td>
                                <td class="text-center">@item.Number</td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>

                                <td class="text-center">

                                    <a href="@Url.Action("Retrash", "Product", new { id=item.Id })" class="btn btn-sm btn-success">
                                        <i class="fas fa-undo-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Product", new { id=item.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td class="text-center">@item.Id</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
