@model IEnumerable<MyClass.Models.ProductInfo>

@{
    ViewBag.Title = "Tất Cả Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">

    <section class="content my-2">

        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">
                            Tất Cả Sản Phẩm
                        </strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <a class="btn btn-sm btn-success" href="@Url.Action("Create","Product")"><i class="fas fa-plus"></i> Thêm</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Trash","Product")"><i class="fas fa-trash"></i> Thùng rác</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th class="text-center" style="width:100px;">Hình ảnh</th>
                            <th class="text-center">Tên sản phẩm</th>
                            <th class="text-center">Loại sản phẩm</th>
                            <th class="text-center" style="width:40px;">Giá </th>
                            <th class="text-center">Giá Sale </th>
                            <th class="text-center" style="width:20px;">Số lượng </th>
                            <th class="text-center">Ngày tạo </th>
                            <th class="text-center" style="width:140px;">Chức năng</th>
                            <th class="text-center" style="width:20px;"> ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"> <input type="checkbox" name="checkId" value=" " /> </td>
                                <td class="text-center">
                                    <img src="~/Public/images/Product/@item.Img" alt="TenHinh" class="img-fluid" />
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="text-center">@item.CatName</td>
                                <td class="text-center">@item.Price</td>
                                <td class="text-center">@item.Pricesale</td>
                                <td class="text-center">@item.Number</td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>

                                <td class="text-center">
                                    @if (item.Status == 1)
                                    {
                                        <a href="@Url.Action("Status", "Product", new { id=item.Id })" class="btn btn-sm btn-success ">
                                            <i class="fas fa-toggle-on"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Status", "Product", new { id=item.Id })" class="btn btn-sm btn-danger ">
                                            <i class="fas fa-toggle-off"></i>
                                        </a>
                                    }
                                    <a href="@Url.Action("Edit", "Product", new { id=item.Id })" class="btn btn-sm btn-info ">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Details", "Product", new { id=item.Id })" class="btn btn-sm btn-warning">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Deltrash", "Product", new { id=item.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td class="text-center">@item.Id</td>
                            </tr>
                        }
                    </tbody>
                </table>



            </div>

        </div>
    </section>
</div>



