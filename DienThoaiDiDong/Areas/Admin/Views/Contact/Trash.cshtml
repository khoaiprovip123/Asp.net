@model IEnumerable<MyClass.Models.Contact>

@{
    ViewBag.Title = "Thùng Rác Liên Hệ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Thùng rác Liên Hệ</strong>

                    </div>
                    <div class="col-md-6 text-right">

                        <a class="btn btn-sm btn-success" href="@Url.Action("", "Contact")"><i class="fas fa-undo-alt"></i> Quay lại</a>


                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th>
                                Họ & Tên
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Số Liên hệ
                            </th>
                            <th>
                                Tiêu đề
                            </th>
                            <th>
                               Nội dung
                            </th>

                            <th>
                                Ngày up
                            </th>

                            <th class="text-center" style="width:200px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <input type="checkbox" name="checkId" value=" " /> </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fullname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Content)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                                </td>


                                <td class="text-center">

                                    <a href="@Url.Action("Retrash", "Contact", new { id=item.Id })" class="btn btn-sm btn-success">
                                        <i class="fas fa-undo-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Contact", new { id=item.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>


                                <td>
                                    @item.Id
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>

        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
