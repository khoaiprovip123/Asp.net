@model IEnumerable<MyClass.Models.Config>

@{
    ViewBag.Title = "Cấu Hình ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">

    <section class="content my-2">

        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase ">
                            Cấu hình
                        </strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <a class="btn btn-sm btn-success" href="@Url.Action("Create","Config")"><i class="fas fa-plus"></i> Thêm</a>
                        

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped " id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th>
                                Tên
                            </th>
                            <th>
                                Chỉ Số
                            </th>
                            <th class="text-center" style="width:200px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <input type="checkbox" name="checkId" value=" " /> </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Value)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Config", new { id=item.Id })" class="btn btn-sm btn-info ">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Details", "Config", new { id=item.Id })" class="btn btn-sm btn-warning">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Config", new { id=item.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>

        </div>
    </section>
</div>


