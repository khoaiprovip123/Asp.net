@model IEnumerable<MyClass.Models.Menu>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewBag.Title = "Thùng Rác Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Thùng rác DANH MỤC SẢN PHẨM</strong>

                    </div>
                    <div class="col-md-6 text-right">

                        <a class="btn btn-sm btn-success" href="@Url.Action("", "Menu")"><i class="fas fa-undo-alt"></i> Quay lại</a>


                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th>
                                Tên
                            </th>
                            <th>
                                Liên kết
                            </th>
                            <th>
                                Kiểu
                            </th>
                            <th>
                                Bảng
                            </th>

                            <th>
                                Ngày tạo
                            </th>
                            <th class="text-center" style="width:200px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <input type="checkbox" name="checkId" value=" " /> </td>
                                <td> @item.Name</td>
                                <td>@item.Link</td>
                                <td>@item.Type</td>
                                <td>@item.Table</td>

                                <td>@item.CreatedAt</td>

                                <td class="text-center">

                                    <a href="@Url.Action("Retrash", "Menu", new { id=item.Id })" class="btn btn-sm btn-success">
                                        <i class="fas fa-undo-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Menu", new { id=item.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>


                                <td>
                                    @item.Id
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>

        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<h2>Trash</h2>

