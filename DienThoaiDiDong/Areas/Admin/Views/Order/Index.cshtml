@model IEnumerable<MyClass.Models.Order>

@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase"> Danh sách Đơn hàng</strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Trash","Order")"><i class="fas fa-trash"></i> Thùng rác</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:10px;">#</th>
                            <th class="text-center" style="width:300px;">
                                Họ & Tên
                            </th>

                            <th class="text-center" style="width:150px;">
                                Ngày tạo
                            </th>
                            <th class="text-center " style="width:150px;">
                                Trạng thái
                            </th>

                            <th class="text-center" style="width:150px;">Chức năng</th>
                            <th class="text-center" style="width:10px;">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="text-center"> <input type="checkbox" name="checkId" value=" " /> </td>
                            <td class="text-center">
                                @Html.Action("NameCustomer", "User", new { userid = item.UserId })
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>

                            <td class="text-center">
                                <a href="@Url.Action("Edit", "Order", new { id=item.Id })" class="btn btn-sm btn-info ">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Details", "Order", new { id=item.Id })" class="btn btn-sm btn-warning">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Deltrash", "Order", new { id=item.Id })" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>


            </div>

        </div>
    </section>

</div>
