@model IEnumerable<MyClass.Models.Order>
@{
    ViewBag.Title = "Thùng rác đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Thùng rác DANH MỤC SẢN PHẨM</strong>

                    </div>
                    <div class="col-md-6 text-right">

                        <a class="btn btn-sm btn-success" href="@Url.Action("", "Order")"><i class="fas fa-undo-alt"></i> Quay lại</a>


                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th>
                                Mã người dùng
                            </th>
                            <th>
                                Tên đơn hàng
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Địa chỉ
                            </th>
                            <th>
                                Ghi chú
                            </th>

                            <th>
                                Ngày tạo
                            </th>

                            <th>Chức năng</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <input type="checkbox" name="checkId" value=" " /> </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReceiverName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReceiverPhone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReceiverEmail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReceiverAdress)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>

                                <td class="text-center">

                                    <a href="@Url.Action("Retrash", "Order", new { id=item.Id })" class="btn btn-sm btn-success">
                                        <i class="fas fa-undo-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Order", new { id=item.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>

            </div>

        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
