@model IEnumerable<MyClass.Models.Topic>

@{
    ViewBag.Title = "Tất Cả Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}

@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">TẤT CẢ DANH MỤC SẢN PHẨM</strong>

                    </div>
                    <div class="col-md-6 text-right">

                        <a class="btn btn-sm btn-success" href="@Url.Action("Create","Topic")"><i class="fas fa-plus"></i> Thêm</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Trash","Topic")"><i class="fas fa-trash"></i> Thùng rác</a>


                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th>Tên danh mục</th>
                            <th style="width:350px;">
                                Slug
                            </th>

                            <th>
                                Ngày tạo
                            </th>

                            <th class="text-center" style="width:200px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <input type="checkbox" name="checkId" value=" " /> </td>
                                <td> @item.Name</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>

                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <a href="@Url.Action("Status", "Topic", new { id=item.Id })" class="btn btn-sm btn-success "><i class="fas fa-toggle-on"></i></a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Status", "Topic", new { id=item.Id })" class="btn btn-sm btn-danger "><i class="fas fa-toggle-off"></i></a>
                                    }
                                    <a href="@Url.Action("Edit", "Topic", new { id=item.Id })" class="btn btn-sm btn-info ">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Details", "Topic", new { id=item.Id })" class="btn btn-sm btn-warning">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Deltrash", "Topic", new { id=item.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>


                                <td>
                                    @item.Id
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>

        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
